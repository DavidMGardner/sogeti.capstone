@using Sogeti.Capstone.Web.Properties
@using Sogeti.Capstone.Web.ViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sogeti Event Management System - Home</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/hover.css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/stickyFooter.js")
    @Scripts.Render("~/Scripts/slideout.js")

</head>
<body>
@Html.Partial("_LoginViewPartial", new UserLoginViewModel())

    <div class="wrapper">
        <header id="navHeaderMainContainer" class="header navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div id="navHeader" class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")"><img id="logo" src="~/Content/Images/Sogeti.jpg" alt="Sogeti Event Management" class="navbar-brand" /></a>
                </div>
                <div id="navHeaderCollapsed" class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </header>

        <main class="body-content main">
            @RenderBody()
        </main>

        <div class="push"></div>
    </div>

    <footer class="footer container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 footer-left">
                <p class="whiteText">&copy; @DateTime.Now.Year - Sogeti Reference Application</p>
            </div>

            <div class="col-xs-12 col-sm-6 footer-right">
                <button id="projectButton" class="btn btn-primary" type="button">
                    Project <span class="badge">@AssemblyInfo.Title</span>
                </button>

                <button id="versionButton" class="btn btn-primary" type="button">
                    Build Number <span class="badge">@ViewContext.Controller.GetType().Assembly.GetName().Version</span>
                </button>
            </div>
        </div>
    </footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>