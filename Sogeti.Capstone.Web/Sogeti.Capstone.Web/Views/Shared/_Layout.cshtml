@using Sogeti.Capstone.Web.Properties
@using Sogeti.Capstone.Web.ViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
@Html.Partial("_LoginViewPartial", new UserLoginViewModel())
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "Home")"><img id="logo" src="~/Content/Images/Sogeti.jpg" alt="Sogeti Event Management" class="navbar-brand"/></a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="body-content">
    @RenderBody()
    <hr/>
    <footer class="container">
        <div class="pull-left">
            <p>&copy; @DateTime.Now.Year - A Super Cool Sogeti Reference Application</p>
        </div>
        <div class="pull-right">
            <div class="row">
                <button class="btn btn-primary" type="button">
                    Project <span class="badge">@AssemblyInfo.Title</span>
                </button>
            </div>

            <div class="row">
                <button class="btn btn-primary" type="button">
                    Build Number <span class="badge">@ViewContext.Controller.GetType().Assembly.GetName().Version</span>
                </button>
            </div>

        </div>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
